<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Manufacturer.EditCarController">
    <children>
        <ImageView fitHeight="650.0" fitWidth="1000.0" opacity="0.2">
            <image>
                <Image url="@../../image/Background.jpg" />
            </image>
        </ImageView>
        <Text layoutX="436.0" layoutY="76.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Edit Car">
            <font>
                <Font size="36.0" />
            </font>
        </Text>
        <TextField fx:id="newRegTxt" layoutX="291.0" layoutY="171.0" prefHeight="31.0" prefWidth="200.0" promptText="New Registration No" />
        <TextField fx:id="newCarMakeTxt" layoutX="291.0" layoutY="214.0" prefHeight="31.0" prefWidth="200.0" promptText="Car Make" />
        <TextField fx:id="newPriceTxt" layoutX="508.0" layoutY="255.0" prefHeight="31.0" prefWidth="200.0" promptText="Price" />
        <TextField fx:id="newCarModelTxt" layoutX="291.0" layoutY="255.0" prefHeight="31.0" prefWidth="200.0" promptText="Car Model" />
        <TextField fx:id="newYearMadeTxt" layoutX="508.0" layoutY="171.0" prefHeight="31.0" prefWidth="200.0" promptText="Year Made" />
        <TextField fx:id="newColorTxt" layoutX="508.0" layoutY="214.0" prefHeight="31.0" prefWidth="200.0" promptText="Color" />
        <Button fx:id="EditCarBtn" layoutX="453.0" layoutY="527.0" mnemonicParsing="false" onAction="#onPressedEditCar" prefHeight="39.0" prefWidth="96.0" text="Edit" />
        <Button fx:id="ToBack" layoutX="464.0" layoutY="585.0" mnemonicParsing="false" onAction="#OnPressedToBack" text="&lt;&lt;Back" />
      <TextField fx:id="searchRegTxt" layoutX="290.0" layoutY="110.0" prefHeight="51.0" prefWidth="327.0" promptText="Registration No">
         <font>
            <Font size="24.0" />
         </font>
      </TextField>
      <Button fx:id="searchBtn" layoutX="645.0" layoutY="110.0" mnemonicParsing="false" onAction="#onPressedSearch" prefHeight="48.0" prefWidth="63.0" text="Load">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="selectImgBtn" layoutX="337.0" layoutY="299.0" mnemonicParsing="false" onAction="#onPressedSelectImg" text="Select Car Image From Local Directory">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ImageView fx:id="carView" fitHeight="150.0" fitWidth="256.0" layoutX="380.0" layoutY="357.0" pickOnBounds="true" preserveRatio="true" />
    </children>
</AnchorPane>
