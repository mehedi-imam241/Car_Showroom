      <Button fx:id="selectImgBtn" layoutX="353.0" layoutY="98.0" mnemonicParsing="false" onAction="#onPressedSelectImage" text="Select Image From Local Directory">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ImageView fx:id="carView" fitHeight="157.0" fitWidth="283.0" layoutX="359.0" layoutY="156.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
